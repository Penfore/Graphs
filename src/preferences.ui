                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
             <child>
              <object class="AdwActionRow">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="title" translatable="yes">Font</property>
                <property name="subtitle" translatable="yes">Choose the font used in the graph</property>
                <property name="use-underline">True</property>
                <child>
                  <object class="GtkFontButton" id="plot_font_chooser">
                    <property name="valign">center</property>

                  </object>
                </child>
              </object>
            </child>

             <child>
              <object class="AdwActionRow">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="title" translatable="yes">Y-axis scale</property>
                <property name="subtitle" translatable="yes">Default scaling on Y-axis</property>
                <property name="use-underline">True</property>
