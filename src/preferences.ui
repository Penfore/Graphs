                <property name="title" translatable="yes">Center data</property>
                <property name="subtitle" translatable="yes">Choose the default behaviour of the center data button</property>
                <property name="use-underline">True</property>
                <child>
                  <object class="GtkDropDown" id="center_data_chooser">
                    <property name="valign">center</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
