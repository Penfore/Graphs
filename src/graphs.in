"""Main graphs module."""

import gettext
import locale
import logging
import os
import signal
import sys

VERSION = "@version@"
PROJECT = "@project@"
PKGDATADIR = "@pkgdatadir@"
LOCALEDIR = "@localedir@"
COPYRIGHT = "@copyright@"
APPID = "@appid@"
NAME = "@name@"
WEBSITE = "@website@"
ISSUES = "@issues@"
AUTHOR = "@author@"

sys.path.insert(1, PKGDATADIR)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain(PROJECT, LOCALEDIR)
locale.textdomain(PROJECT)
gettext.install(PROJECT, LOCALEDIR)

if __name__ == "__main__":
    import gi

    gi.require_version("Adw", "1")
    gi.require_version("Gtk", "4.0")

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(PKGDATADIR, "@appid@.gresource"))
    resource._register()

    format = "%(levelname)s: %(message)s"
    logging.basicConfig(format=format, level=logging.@log_level@)

    args = [VERSION, APPID, NAME, COPYRIGHT, WEBSITE, ISSUES, AUTHOR]

    from graphs import main
    sys.exit(main.main(args))
