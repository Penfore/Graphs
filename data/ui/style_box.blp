using Gtk 4.0;
using Adw 1;

template $GraphsStyleBox : AspectFrame {
  child: Box {
    orientation: vertical;
    Overlay overlay {
      height-request: 80;
      width-request: 160;
      [overlay]
      Image indicator {
        halign: start;
        valign: start;
        margin-start: 8;
        margin-top: 8;
        icon-name: "check-round-outline-whole-symbolic";
        name: "indicator";
      }
      [overlay]
      Box modify_box {
        margin-end: 8;
        margin-top: 8;
        halign: end;
        valign: start;
        orientation: vertical;
        Button {
          tooltip-text: _("Remove");
          clicked => $on_delete();
          styles ["flat"]
          Image {
            hexpand: false;
            icon-name: "edit-delete-symbolic";
          }
        }

        Button {
          tooltip-text: _("Edit");
          clicked => $on_edit();
          styles ["flat"]
          Image {
            hexpand: false;
            icon-name: "settings-symbolic";
          }
        }
      }
    }
    Label label {
      margin-top: 12;
    }
  };
}