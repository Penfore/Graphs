using Gtk 4.0;
using Adw 1;

template SampleBox : Box {
  Box sample_box {
    margin-start: 6;
    margin-end: 6;
    margin-bottom: 9;
    margin-top: 9;

    CheckButton check_button {
      halign: start;
      hexpand: false;
      styles ["selection-mode"]
    }

    Label label {
      margin-start: 6;
      margin-end: 6;
      halign: start;
      hexpand: true;
    }

    Button edit_button {
      tooltip-text: _("Edit Item");
      styles ["flat"]
      Image {
        hexpand: false;
        icon-name: "settings-symbolic";
        pixel-size: 20;
      }
    }

    Button color_button {
      tooltip-text: _("Pick a color");
      styles ["flat"]
      Image {
        hexpand: false;
        icon-name: "color-picker-symbolic";
        pixel-size: 20;
      }
    }

    Button delete_button {
      tooltip-text: _("Remove");
      styles ["flat"]
      Image {
        hexpand: false;
        icon-name: "edit-delete-symbolic";
      }
    }
  }
}